<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:background="#FFFFFF"


    >
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        >
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="14pt"
            android:text=""
            android:id="@+id/line_two"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="320dp"
        android:layout_height="70dp"
        android:paddingLeft="5dp"

        >
    <TextView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:textSize="24pt"
        android:text=""
        android:id="@+id/line"
        android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="ce"
            android:textSize="14pt"
            android:id="@+id/ce"
            android:textColor="#717171"
            android:background="#ffff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="14pt"
            android:id="@+id/division"
            android:onClick="firstNum"
            android:textColor="#001275"
            android:background="#FFFFFF"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="*"
            android:textSize="14pt"
            android:id="@+id/multiplication"
            android:onClick="firstNum"
            android:textColor="#6E0800"
            android:background="#FFFFFF"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="c"
            android:textSize="14pt"
            android:id="@+id/erase"
            android:textColor="#FFFFFF"
            android:background="#737373"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="14pt"
            android:id="@+id/seven"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="14pt"
            android:id="@+id/eight"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="14pt"
            android:id="@+id/nine"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="14pt"
            android:id="@+id/plus"
            android:onClick="firstNum"
            android:textColor="#6E0800"
            android:background="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="14pt"
            android:id="@+id/four"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="14pt"
            android:id="@+id/five"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="14pt"
            android:id="@+id/six"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="14pt"
            android:id="@+id/minus"
            android:onClick="firstNum"
            android:textColor="#001275"
            android:background="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="14pt"
            android:id="@+id/one"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="14pt"
            android:id="@+id/two"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="14pt"
            android:id="@+id/three"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="14pt"
            android:id="@+id/point"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="14pt"
            android:id="@+id/zero"
            android:onClick="num"
            android:textColor="#000000"
            android:background="#FFFFFF"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="14pt"
            android:id="@+id/result"
            android:onClick="result"
            android:textColor="#FFFFFF"
            android:background="#000000"/>
    </LinearLayout>





  </LinearLayout>


 